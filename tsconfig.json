{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "rootDir": "./scripts",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "sourceMap": false,
    "declaration": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ],
    "types": [
      "construct3"
    ]
  },
  "include": [
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts-archive/**/*",
    "scripts-archive",
    "**/scripts-archive/**",
    "tests/**/*"
  ]
}