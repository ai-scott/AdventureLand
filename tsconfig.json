{
  "compilerOptions": {
    "target": "ES2022", // âœ… Modern target for good IntelliSense
    "module": "ES2022", // âœ… Modern modules
    "moduleResolution": "node", // âœ… Standard resolution
    "lib": [
      "ES2022",
      "DOM"
    ], // âœ… Include DOM types for browser APIs
    "rootDir": "./scripts", // âœ… Your source directory
    "strict": true, // âœ… Maximum type safety
    "esModuleInterop": true, // âœ… Better import compatibility
    "allowSyntheticDefaultImports": true, // âœ… Import flexibility
    "skipLibCheck": true, // âœ… Faster compilation
    "forceConsistentCasingInFileNames": true, // âœ… Cross-platform consistency
    "noEmit": true, // ðŸ”¥ KEY: Let C3 handle compilation!
    "sourceMap": false, // ðŸ”¥ Not needed since C3 handles it
    "declaration": false, // ðŸ”¥ Not needed for C3 internal compilation
    "resolveJsonModule": true, // âœ… Allow JSON imports
    "allowJs": true, // âœ… Mixed JS/TS support
    "checkJs": false, // âœ… Focus on TypeScript files
    "typeRoots": [
      "./node_modules/@types", // âœ… Standard @types packages
      "./node_modules" // ðŸ†• For construct3 package
    ],
    "types": [
      "construct3" // ðŸ†• Construct 3 type definitions
    ]
  },
  "include": [
    "scripts/**/*" // âœ… All your TypeScript files
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts" // âœ… Exclude test files
  ]
}